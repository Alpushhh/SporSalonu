@model IEnumerable<SporSalonu.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<div class="container mt-4">
    <h1>Tüm Randevular (Yönetici Paneli)</h1>
    <p>Üyelerin talep ettiği randevuları buradan onaylayabilir veya silebilirsiniz.</p>
    <hr />

    <table class="table table-bordered">
        <thead class="bg-secondary text-white">
            <tr>
                <th>Üye Bilgisi</th>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Antrenör</th>
                <th>Hizmet</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Member != null)
                        {
                            <strong>@item.Member.FullName</strong>
                    
                            <br />
                            <small>@item.Member.Email</small>
                        }
                        else
                        {
                            <span class="text-danger">Kullanıcı Silinmiş</span>
                        }
                    </td>
                    <td>@item.AppointmentDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.AppointmentDate.ToString("HH:00")</td>
                    <td>@item.Trainer?.FullName</td>
                    <td>@item.Service?.ServiceName</td>
                    <td>
                        @if (item.IsConfirmed)
                        {
                            <span class="badge bg-success">Onaylandı</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            @if (!item.IsConfirmed)
                            {
                                <form asp-action="Approve" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-success">Onayla</button>
                                </form>
                            }

                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>