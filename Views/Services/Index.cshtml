@model IEnumerable<SporSalonu.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-4">
    <h1>Hizmet Listesi</h1>

    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle</a>
        </p>
    }

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Görsel</th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DurationMinutes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.ServiceName" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;" />
                        }
                        else
                        {
                            <span class="text-muted">Resim Yok</span>
                        }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DurationMinutes) dk
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price) ₺
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-danger">Sil</a>
                        }

                        <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-sm btn-info text-white">Detaylar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>