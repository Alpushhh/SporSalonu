@model IEnumerable<SporSalonu.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<h1>Hizmet Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DurationMinutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DurationMinutes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ServiceId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.ServiceId">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.ServiceId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>