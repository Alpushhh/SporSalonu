@model SporSalonu.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<div class="container mt-4">
    <h1>Yeni Antrenör Ekle</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Ad Soyad giriniz" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Expertise" class="form-label fw-bold"></label>
                    <input asp-for="Expertise" class="form-control" placeholder="Örn: Fitness, Pilates" />
                    <span asp-validation-for="Expertise" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="WorkStartHour" class="form-label fw-bold"></label>
                        <input asp-for="WorkStartHour" type="number" min="0" max="23" class="form-control" />
                        <span asp-validation-for="WorkStartHour" class="text-danger"></span>
                        <small class="text-muted">0-23 arası (Örn: 9)</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="WorkEndHour" class="form-label fw-bold"></label>
                        <input asp-for="WorkEndHour" type="number" min="0" max="23" class="form-control" />
                        <span asp-validation-for="WorkEndHour" class="text-danger"></span>
                        <small class="text-muted">0-23 arası (Örn: 17)</small>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Profil Fotoğrafı</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>

                <div class="card mb-3 bg-light">
                    <div class="card-header fw-bold">Verebileceği Hizmetler</div>
                    <div class="card-body">
                        <div class="row">
                            @if (ViewBag.Services != null)
                            {
                                @foreach (var service in (List<SporSalonu.Models.Service>)ViewBag.Services)
                                {
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="selectedServices"
                                                   value="@service.ServiceId"
                                                   id="service_@service.ServiceId">
                                            <label class="form-check-label" for="service_@service.ServiceId">
                                                @service.ServiceName
                                            </label>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-danger">Kayıtlı hizmet bulunamadı. Önce Hizmetler sayfasından ekleme yapınız.</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="form-group d-grid gap-2 d-md-block">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}