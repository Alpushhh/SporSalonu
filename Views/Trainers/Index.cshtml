@model IEnumerable<SporSalonu.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<h1>Antrenör Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Antrenör Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expertise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expertise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhotoUrl)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TrainerId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.TrainerId">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.TrainerId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>