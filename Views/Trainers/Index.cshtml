@model IEnumerable<SporSalonu.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container mt-4">
    <h1>Eğitmen Listesi</h1>

    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i> Yeni Antrenör Ekle</a>
        </p>
    }

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Fotoğraf</th>
                <th>Ad Soyad</th>
                <th>Uzmanlık</th>
                <th>Verdiği Dersler</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PhotoUrl))
                        {
                            <img src="@item.PhotoUrl" alt="@item.FullName" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;" />
                        }
                        else
                        {
                            <span class="text-muted">Resim Yok</span>
                        }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Expertise)
                    </td>

                    <td>
                        @if (item.TrainerServices != null && item.TrainerServices.Any())
                        {
                            foreach (var ts in item.TrainerServices)
                            {
                                <span class="badge bg-info text-dark mb-1">@ts.Service.ServiceName</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted small">Hizmet atanmamış</span>
                        }
                    </td>

                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn btn-sm btn-danger">Sil</a>
                        }

                        <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn btn-sm btn-secondary">Detaylar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>