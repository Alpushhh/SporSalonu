@model SporSalonu.Models.Trainer

@{
    ViewData["Title"] = "Antrenörü Düzenle";
}

<div class="container mt-4">
    <h1>Antrenörü Düzenle</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="TrainerId" />
                <input type="hidden" asp-for="PhotoUrl" />

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Expertise" class="form-label fw-bold"></label>
                    <input asp-for="Expertise" class="form-control" />
                    <span asp-validation-for="Expertise" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="WorkStartHour" class="form-label fw-bold"></label>
                        <input asp-for="WorkStartHour" type="number" min="0" max="23" class="form-control" />
                        <span asp-validation-for="WorkStartHour" class="text-danger"></span>
                        <small class="text-muted">Başlangıç (0-23)</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="WorkEndHour" class="form-label fw-bold"></label>
                        <input asp-for="WorkEndHour" type="number" min="0" max="23" class="form-control" />
                        <span asp-validation-for="WorkEndHour" class="text-danger"></span>
                        <small class="text-muted">Bitiş (0-23)</small>
                    </div>
                </div>

                <div class="form-group mb-3 p-3 border rounded bg-light">
                    <label class="form-label fw-bold">Profil Fotoğrafı</label>

                    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                    {
                        <div class="mb-2">
                            <img src="@Model.PhotoUrl" alt="Mevcut Fotoğraf" style="max-width: 150px; border-radius: 8px;" />
                            <p class="text-muted small">Mevcut Fotoğraf</p>
                        </div>
                    }

                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    <small class="text-muted">Fotoğrafı değiştirmek istemiyorsanız boş bırakın.</small>
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>

                <div class="card mb-3">
                    <div class="card-header fw-bold">Verdiği Hizmetler</div>
                    <div class="card-body">
                        <div class="row">
                            @if (ViewBag.Services != null)
                            {
                                // Seçili olanları bir diziye alıyoruz ki kontrol edebilelim
                                var selectedIds = (int[])ViewBag.SelectedServices ?? new int[0];

                                @foreach (var service in (List<SporSalonu.Models.Service>)ViewBag.Services)
                                {
                                    // Eğer bu hizmet ID'si, hocanın listesinde varsa kutuyu işaretle (checked)
                                    var isChecked = selectedIds.Contains(service.ServiceId) ? "checked" : "";

                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="selectedServices"
                                                   value="@service.ServiceId"
                                                   id="service_@service.ServiceId"
                                                   @isChecked>
                                            <label class="form-check-label" for="service_@service.ServiceId">
                                                @service.ServiceName
                                            </label>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <div class="form-group d-grid gap-2 d-md-block">
                    <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}