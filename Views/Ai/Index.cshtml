@model SporSalonu.Models.AppUser

@{
    ViewData["Title"] = "AI Canlı Destek";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5 text-primary">
            <i class="bi bi-robot"></i> Gemini AI Antrenör
        </h1>
        <p class="lead text-muted">Google Yapay Zeka altyapısı ile size özel canlı program.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Bilgilerinizi Girin</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GetAdvice" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Cinsiyet</label>
                            <select name="gender" class="form-select">
                                <!option value="Erkek" @(Model?.Gender == "Erkek" ? "selected" : "")>Erkek</!option>
                                <!option value="Kadın" @(Model?.Gender == "Kadın" ? "selected" : "")>Kadın</!option>
                            </select>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label fw-bold">Yaş</label>
                                <input type="number" name="age" class="form-control"
                                       value="@(Model?.BirthYear > 0 ? (DateTime.Now.Year - Model.BirthYear) : 25)" required />
                            </div>
                            <div class="col">
                                <label class="form-label fw-bold">Kilo (kg)</label>
                                <input type="number" name="weight" class="form-control"
                                       value="@(Model?.Weight > 0 ? Model.Weight : 75)" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Boy (cm)</label>
                            <input type="number" name="height" class="form-control"
                                   value="@(Model?.Height > 0 ? Model.Height : 175)" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Hedef</label>
                            <select name="goal" class="form-select">
                                <option value="Kilo Vermek">Kilo Vermek</option>
                                <option value="Kas Yapmak">Kas Yapmak</option>
                                <option value="Kondisyon Artırmak">Kondisyon / Sağlık</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning fw-bold">
                                <i class="bi bi-stars"></i> Yapay Zekaya Sor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @if (ViewBag.Result != null)
            {
                <div class="card shadow border-0 h-100">
                    <div class="card-body p-5 bg-light" style="border-radius: 15px;">
                        @Html.Raw(ViewBag.Result)

                        <div class="mt-4 pt-3 border-top text-end">
                            <small class="text-muted fst-italic">Bu içerik Google Gemini AI tarafından oluşturulmuştur.</small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="h-100 d-flex flex-column justify-content-center align-items-center text-muted border rounded bg-white p-5">
                    <i class="bi bi-chat-square-dots display-1 mb-3 text-secondary"></i>
                    <h4>Sonuçlar Bekleniyor...</h4>
                    <p class="text-center">Bilgilerinizi girip butona bastığınızda<br>gerçek zamanlı analiz yapılacaktır.</p>
                </div>
            }
        </div>
    </div>
</div>