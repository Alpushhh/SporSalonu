@model SporSalonu.Models.AppUser
@{
    ViewData["Title"] = "AI Canlı Destek";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary"><i class="bi bi-robot"></i> Gemini AI Antrenör</h1>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="GetAdvice" method="post">
                        <div class="mb-3">
                            <label>Cinsiyet</label>
                            <select name="gender" class="form-select">
                                <option value="Erkek" selected="@(Model?.Gender == "Erkek")">Erkek</option>
                                <option value="Kadın" selected="@(Model?.Gender == "Kadın")">Kadın</option>
                            </select>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label>Yaş</label>
                                <input type="number" name="age" class="form-control" value="25" required />
                            </div>
                            <div class="col">
                                <label>Kilo</label>
                                <input type="number" name="weight" class="form-control" value="75" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Boy</label>
                            <input type="number" name="height" class="form-control" value="175" required />
                        </div>
                        <div class="mb-3">
                            <label>Hedef</label>
                            <select name="goal" class="form-select">
                                <option value="Kilo Vermek">Kilo Vermek</option>
                                <option value="Kas Yapmak">Kas Yapmak</option>
                                <option value="Kondisyon Artırmak">Kondisyon</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-warning w-100 fw-bold">ANALİZ ET</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @if (ViewBag.Result != null)
            {
                <div class="card shadow">
                    <div class="card-body bg-light">

                        @if (ViewBag.ImageUrl != null)
                        {
                            <div class="text-center mb-4">
                                <h4 class="text-success fw-bold">Hedeflenen Form</h4>
                                <img src="@ViewBag.ImageUrl" class="img-fluid rounded shadow" style="max-height: 400px;" />
                            </div>
                        }

                        <div class="ai-text">
                            @Html.Raw(ViewBag.Result)
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center mt-5">
                    Sonuç bekleniyor... Lütfen formu doldurun.
                </div>
            }
        </div>
    </div>
</div>